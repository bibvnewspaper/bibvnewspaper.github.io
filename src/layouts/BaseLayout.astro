---
import "../styles/global.css";

const { title = "On a MONTHLY BASIS", description = "BASIS Independent Bellevue student newspaper" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="page">
      <header class="container">
        <nav class="nav">
          <a class="brand" href="/">On a MONTHLY BASIS</a>
          <div class="nav-links">
            <a href="/articles">Archives</a>
            <a href="/about">About</a>
          </div>
        </nav>
      </header>
      <main class="container">
        <slot />
      </main>
      <footer class="footer">
        <div class="container footer-content">
          <div class="footer-intro">
            <div class="brand">On a MONTHLY BASIS</div>
            <p>Student newspaper, BASIS Independent Bellevue.</p>
          </div>
          <div class="footer-resources" aria-label="Relevant resources">
            <section class="footer-column" aria-labelledby="footer-contact">
              <h3 id="footer-contact">Contact</h3>
              <a href="mailto:basisindependentblv.newspaper@gmail.com">Send an email</a>
            </section>
            <section class="footer-column" aria-labelledby="footer-websites">
              <h3 id="footer-websites">Websites</h3>
              <a href="https://bibvnewspaper.github.io/">Home page</a>
              <a href="https://www.basisindependent.com/schools/bellevue/">School website</a>
            </section>
            <section class="footer-column" aria-labelledby="footer-github">
              <h3 id="footer-github">GitHub</h3>
              <a href="https://github.com/bibvnewspaper">Organization page</a>
              <a href="https://github.com/bibvnewspaper/bibvnewspaper.github.io/blob/main/CONTRIBUTING.md">Contributor guide</a>
            </section>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

---
import "../styles/global.css";

const { title = "On a MONTHLY BASIS", description = "BASIS Independent Bellevue student newspaper" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <div class="page">
      <header class="container">
        <nav class="nav">
          <a class="brand" href="/">On a MONTHLY BASIS</a>
          <div class="nav-links">
            <a href="/articles">Archives</a>
            <a href="/about">About</a>
          </div>
        </nav>
      </header>
      <main class="container">
        <slot />
      </main>
      <footer class="footer">
        <div class="container footer-content">
          <div class="brand">On a MONTHLY BASIS</div>
          <p>Student newspaper, BASIS Independent Bellevue.</p>
          <div class="footer-resources-wrap">
            <table class="footer-resources" aria-label="Relevant resources">
              <caption>Resources</caption>
              <tbody>
                <tr>
                  <th scope="row">School</th>
                  <td><a href="https://www.basisindependent.com/schools/bellevue/">BASIS Independent Bellevue</a></td>
                </tr>
                <tr>
                  <th scope="row">Newspaper Site</th>
                  <td><a href="https://bibvnewspaper.github.io/">bibvnewspaper.github.io</a></td>
                </tr>
                <tr>
                  <th scope="row">GitHub</th>
                  <td><a href="https://github.com/bibvnewspaper">github.com/bibvnewspaper</a></td>
                </tr>
                <tr>
                  <th scope="row">Contributing</th>
                  <td><a href="https://github.com/bibvnewspaper/bibvnewspaper.github.io/blob/main/CONTRIBUTING.md">Contributor guide</a></td>
                </tr>
                <tr>
                  <th scope="row">Contact</th>
                  <td><a href="mailto:basisindependentblv.newspaper@gmail.com">basisindependentblv.newspaper@gmail.com</a></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
